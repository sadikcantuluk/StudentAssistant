@using StudentAssistant.WebUI.Dtos.Student
@model List<ResultStudentDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Öğrenci Bilgileri</h1>

<br/>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Ad</th>
        <th>Soyad</th>
        <th>Yaş</th>
        <th>Öğrenim Durumu</th>
        <th>Bölüm</th>
        <th>Sınıf</th>
        <th>Şehir</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.StudentID</td>
            <td>@item.Name</td>
            <td>@item.Surname</td>
            <td>@item.Age</td>
            <td>@item.Status</td>
            <td>@item.Department</td>
            <td>@item.Class</td>
            <td>@item.City</td>
            <td><a href="/Student/UpdateStudent/@item.StudentID" class="btn btn-success">Güncelle</a></td>
        </tr>
    }
</table>

