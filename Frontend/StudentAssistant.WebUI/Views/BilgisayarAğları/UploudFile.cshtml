@using StudentAssistant.WebUI.Dtos.Message
@model MessageViewModel

@{
    ViewData["Title"] = "UploudFile";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<form method="post" enctype="multipart/form-data">
    <input type="file" name="file" class="form-control"></input>
    @* <button class="btn btn-primary">Dosya Yükle</button> *@
</form>
<br/>
@* <input type="text" class="form-control" placeholder=""/> *@
<div class="row">
    <div class="col">
        <div class="card">
            <div class="card-body">
                <p><h4>Dökümanla İlgili Tüm Sorularını Sorabilirsin</h4></p>
            </div>
        </div>
    </div>
</div>
<br />
<form method="post">
    <div class="container-fluid">
        <div class="row">
            <div class="col">
                <div class="card">
                    <div class="card-body">
                        <input type="text" class="form-control bg-transparent" placeholder=" Soru" asp-for="Question">
                    </div>
                </div>
                <button class="btn btn-primary">Gönder</button>
            </div>
            <div class="col">
                <div class="card">
                    <div class="card-body">
                        <textarea class="textarea_editor form-control bg-light" rows="15" placeholder="Cevap ...">@Model.choices.FirstOrDefault().message.content</textarea>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
